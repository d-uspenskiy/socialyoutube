{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
  },
  "compileOnSave": true,
  "exclude": ["./node_modules", "./dist"],
  "include": [
    "src/*",
    "src/**/*"
  ]
}
